FROM ubuntu:18.04
#FROM debian:sid
RUN apt-get update && apt-get dist-upgrade -y
RUN apt-get install snapcraft* -y
RUN adduser --home /home/snap --disabled-password --gecos 'snap,snap,snap,snap,snap' snap
#COPY firefox.launchers/snap /home/snap/snap
COPY . /home/snap/snap
WORKDIR /home/snap/snap
RUN chown snap:snap -R /home/snap/snap
#RUN sed -i 's|firefox.launcher/snap/gnulinux|gnulinux|g' /home/snap/snap/snapcraft.yaml
RUN snapcraft
CMD bash -i
